---
import Swiper from 'swiper';
import 'swiper/css';
import Tilt from '../../util/Tilt.astro';
const { slides } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"
    />

    <!-- Demo styles -->
    <style>
      .swiper-slide {
        max-width: 30rem;
      }
    </style>
    <title></title>
  </head>

  <body>
    <!-- Swiper -->
    <div class="swiper artworkSwiper">
      <div class="swiper-wrapper">
        {
          slides.map((item) => (
            <div class="swiper-slide" key={item}>
              <Tilt
                styling={`m-20 rounded-3xl shadow-3xl bg-cover overflow-hidden`}
                input={''}
                bgImage={item}
              />
            </div>
          ))
        }
        <div class="swiper-pagination"></div>
      </div>
    </div>

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"
    ></script>

    <!-- Initialize Swiper -->
    <script>
      const swiper = new Swiper('.artworkSwiper', {
        slidesPerView: 3,
        centeredSlides: true,
        spaceBetween: 30,
        pagination: {
          el: '.swiper-pagination',
          clickable: true
        }
      });
    </script>
  </body>
</html>
