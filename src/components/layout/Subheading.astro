---
const { title, description } = Astro.props;
---

<section class="py-4 sm:py-2">
  <div class="mx-5 max-w-2xl px-2 sm:px-4 lg:max-w-6xl lg:px-6">
    <div class="flex flex-col gap-4 sm:gap-6">
      <h1 class="text-xl font-medium tracking-tight sm:text-2xl lg:text-3xl">
        {title}
      </h1>
      <p
        class="max-w-xl text-base text-primary-950/70 dark:text-primary-200/70"
      >
        {description}
      </p>
    </div>
  </div>
</section>
